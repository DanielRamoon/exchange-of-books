generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  books    Book[] @relation("UserBooks")
}

model Book {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  author  String
  status     String   @default("available")
  description String?  
  ownerId String @db.ObjectId
  owner   User   @relation("UserBooks", fields: [ownerId], references: [id])
  reservedBy String?
}

model Trade {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  bookFromId String
  userFromId String
  bookToId   String
  userToId   String
  status     String
}
